# Font configuration
font-family = "MesloLGS Nerd Font Mono"
font-size = 18
keybind = cmd+shift+,=reload_config
# Theme/Colors
theme = catppuccin-mocha
background-blur = true
background-opacity = 0.92
window-theme=auto
# Window settings
window-padding-x = 8
window-padding-y = 8
# window-decoration = none
# Performance
shell-integration = zsh
shell-integration-features = cursor,sudo,title
# Cursor
cursor-style = block
cursor-style-blink = true
# Other useful settings
confirm-close-surface = false
copy-on-select = true
# Split pane keybindings (vim motions)
keybind = cmd+shift+l=new_split:right
keybind = cmd+shift+j=new_split:down
keybind = cmd+shift+h=new_split:left
keybind = cmd+shift+k=new_split:up
# Navigate between splits (vim motions)
keybind = cmd+h=goto_split:left
keybind = cmd+l=goto_split:right
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up
# Resize splits with Cmd+alt + vim motions
keybind = cmd+alt+h=resize_split:left,15
keybind = cmd+alt+j=resize_split:down,15
keybind = cmd+alt+k=resize_split:up,15
keybind = cmd+alt+l=resize_split:right,15
# Close current split
keybind = cmd+shift+w=close_surface
# Fullscreen toggle
keybind = cmd+shift+f=toggle_fullscreen
keybind = shift+enter=text:\n
